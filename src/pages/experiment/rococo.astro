  body {
    font-family: Bahnschrift, "DIN Alternate", "Franklin Gothic Medium",
      "Nimbus Sans Narrow", sans-serif-condensed, sans-serif;
    font-weight: normal;
    padding: 0;
    margin: 0;
    background-image: linear-gradient(
        7deg,
        rgba(20, 20, 20, 1),
        rgba(30, 30, 30, 1)
      ),
      url("data:image/svg+xml,%3Csvg viewBox='0 0 300 300' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='1.5' numOctaves='1' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    filter: contrast(500%) brightness(125%) grayscale(1);
  }

  .wrapper {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: stretch;
  }

  .grid {
    position: relative;
    width: 100%;
    background: #000;
    display: grid;
    grid-template-columns: auto 1fr 1fr auto;
    grid-template-rows: auto 1fr auto;
    /*   aspect-ratio:var(--ratio); */
    /*   aspect-ratio:auto; */
    overflow: hidden;
    background-image: linear-gradient(
        7deg,
        rgba(20, 20, 20, 0.1),
        rgba(49, 49, 49, 0.4)
      ),
      url("data:image/svg+xml,%3Csvg viewBox='0 0 300 300' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='1.5' numOctaves='1' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    filter: contrast(500%) brightness(125%) grayscale(1);
  }
  .cell {
    display: flex;
    justify-content: center;
    align-items: center;
    background: rgba(0, 0, 0, 0.8);
    mix-blend-mode: plus-lighter;
    color: #fff;
  }

  .cell p,
  .cell h2,
  .cell h3 {
    margin: 0;
    padding: 0;
    max-width: 30ch;
    max-height: 40ch;
    font-family: var(--font-default);
    font-width: 500;
    font-size: var(--font-size-sm);
    line-height: 112.5%;
    text-align: center;
    text-wrap: balance;
    text-transform: uppercase;
    letter-spacing: var(--ls-loose);
    filter: blur(0.33px);
  }

  .cell h2 {
    font-size: var(--font-size-lg);
    letter-spacing: 0;
  }
  .cell h3 {
    font-size: var(--font-size-base);
  }

  .main {
    grid-row: 2;
    grid-column: 2 / span 2;
    background: rgba(254, 254, 254, 0.9);
  }

  .title {
    font-family: var(--font-big);
    font-size: 30vh;
    line-height: 1;
    color: black;
    margin: 0;
    padding: 0.25vw 2vw;
    writing-mode: vertical-lr;
    filter: blur(2px);
    transition: all 0.5s cubic-bezier(0.85, 0, 0.15, 1) allow-discrete;
  }

  .side-top,
  .side-bottom {
    grid-column: 2 / span 2;
    display: flex;
    flex-direction: column;
    gap: 0;
    padding: 1vw;
  }

  .side-left,
  .side-right {
    writing-mode: vertical-lr;
    grid-row: 1 / span 3;
    padding: 1vw;
  }
  .side-top {
    grid-row: 1;
  }
  .side-left {
    grid-column: 1;
    transform: rotate(180deg);
    writing-mode: vertical-rl;
  }

  .side-right {
    grid-column: 4;
  }
  .side-bottom {
    grid-row: 3;
  }
  .overlay {
    z-index: 5;
    position: absolute;
    width: 51%;
    height: 101%;
    top: 0;
    left: -1%;
    /*   grid-column: 3 / span 2;  
    grid-row: 1 / span 3; */
    background: rgba(255, 255, 255, 1);
    mix-blend-mode: exclusion;
    display: block;
    transition: all 0.5s cubic-bezier(0.85, 0, 0.15, 1) allow-discrete;
  }

  @keyframes flicker {
    0% {
      left: 0;
    }
    100% {
      left: 50%;
    }
  }

  @media only screen and (min-width: 768px) {
    body {
      background-image: linear-gradient(
          33deg,
          rgba(255, 255, 255, 0.8),
          rgba(10, 10, 10, 0.1)
        ),
        url("data:image/svg+xml,%3Csvg viewBox='0 0 300 300' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='5.5' numOctaves='1' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
      filter: contrast(1000%) brightness(500%) grayscale(1);
    }
    .wrapper {
      padding: 2vw;
      justify-content: center;
      align-items: center;
    }

    .grid {
      width: auto;
      height: 100%;
      box-shadow: var(--shadow-elevation-low);
      background-image: linear-gradient(
          33deg,
          rgba(255, 255, 255, 0.8),
          rgba(10, 10, 10, 0.1)
        ),
        url("data:image/svg+xml,%3Csvg viewBox='0 0 300 300' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='10.5' numOctaves='5' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
      filter: contrast(250%) brightness(125%) grayscale(1);
      border-radius: 0.25rem;
      transition: all 0.5s cubic-bezier(0.85, 0, 0.15, 1) allow-discrete;
    }

    .grid:hover .overlay {
      /*
    animation-name: flicker;
    animation-duration: 2.5s;
    animation-iteration-count: infinite;
    animation-direction: alternate; 
    */

      left: 50%;
    }
    .grid:hover .title {
      filter: blur(0.5rem);
    }

    .grid:hover {
      /*     transform:rotate(1.333deg) scale(1.05); */
    }

    .title {
      writing-mode: horizontal-tb;
    }
  }

  /* RESET */

  /* Box sizing rules */
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  /* Prevent font size inflation */
  html {
    -moz-text-size-adjust: none;
    -webkit-text-size-adjust: none;
    text-size-adjust: none;
  }

  /* Remove default margin in favour of better control in authored CSS */
  body,
  h1,
  h2,
  h3,
  h4,
  p,
  figure,
  blockquote,
  dl,
  dd {
    margin-block-end: 0;
  }

  /* Remove list styles on ul, ol elements with a list role, which suggests default styling will be removed */
  ul[role="list"],
  ol[role="list"] {
    list-style: none;
  }

  /* Set core body defaults */
  body {
    min-height: 100vh;
    line-height: 1.5;
  }

  /* Set shorter line heights on headings and interactive elements */
  h1,
  h2,
  h3,
  h4,
  button,
  input,
  label {
    line-height: 1.1;
  }

  /* Balance text wrapping on headings */
  h1,
  h2,
  h3,
  h4 {
    text-wrap: balance;
  }

  /* A elements that don't have a class get default styles */
  a:not([class]) {
    text-decoration-skip-ink: auto;
    color: currentColor;
  }

  /* Make images easier to work with */
  img,
  picture {
    max-width: 100%;
    display: block;
  }

  /* Inherit fonts for inputs and buttons */
  input,
  button,
  textarea,
  select {
    font: inherit;
  }

  /* Make sure textareas without a rows attribute are not tiny */
  textarea:not([rows]) {
    min-height: 10em;
  }

  /* Anything that has been anchored to should have extra scroll margin */
  :target {
    scroll-margin-block: 5ex;
  }
</style>
